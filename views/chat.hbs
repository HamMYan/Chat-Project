<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/css/userStyle.css">
</head>

<body>
  <div class="container">
    <div class="sidebar">
      <a style="text-decoration: none;" href="/user/settings">
        <i style="font-size:24px" class="fa">&#xf013;</i>
      </a>
      <hr>
      {{#if users}}
      {{#each users}}
      <a style="text-decoration: none; color:white;" href="/user/chat/{{id}}">
        <div class="sidebar-item">
          <img src="/{{picUrl}}" alt="">
          <div class="details">
            <span class="name">{{nickname}}</span>
            <span class="message">{{lastMessage}}</span>
          </div>
        </div>
      </a>
      <hr>
      {{/each}}
      {{/if}}
    </div>
    <div class="content">
      <div class="chat">
        <div class="chat-header">
          <div class="chat-header-left">
            {{#if friend}}
            <img src="/{{friend.picUrl}}" alt="User Avatar">
            <span class="chat-user-name">{{friend.nickname}}</span>
            {{/if}}

          </div>
          <div class="chat-header-right">
            <i class="fa fa-info-circle"></i>
          </div>
        </div>
        <div class="chat-messages">
          <div class="message">
            <div class="message-user">
              {{#if friend}}
              <img src="/{{friend.picUrl}}" alt="User Avatar">
              {{/if}}
            </div>
            <div class="message-text">Hello! How are you?</div>
          </div>
        </div>
        <form action="/user/newMess/{{friend.id}}" method="post" class="chat-footer">
          <input type="text" name="message" class="chat-input" placeholder="Type a message...">
          <button class="send-button">Send</button>
        </form>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io()
    const btn = document.querySelector('.send-button')
    const message = document.getElementById('message')

    btn.addEventListener('click', () => {
      message.value = ''
    })
  </script>
</body>

</html>